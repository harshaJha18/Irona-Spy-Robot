<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
android:id="@+id/acr">
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Forward"
android:id="@+id/fwd_button"
android:layout_centerVertical="true"
android:layout_centerHorizontal="true" />
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="BACKWARD"
android:id="@+id/bwd_button"
android:layout_below="@+id/left_button"
android:layout_centerHorizontal="true" />
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="LEFT"
android:id="@+id/left_button"
android:layout_below="@+id/fwd_button"
android:layout_toStartOf="@+id/fwd_button" />
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="RIGHT"
android:id="@+id/right_button"
android:layout_below="@+id/fwd_button"
android:layout_toEndOf="@+id/fwd_button" />
<Space
android:layout_width="100px"
android:layout_height="100px"
android:layout_above="@+id/fwd_button"
android:layout_centerHorizontal="true" />
<WebView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:id="@+id/webView"
android:layout_alignParentTop="true"
android:layout_alignParentStart="true"
android:layout_alignParentEnd="true"
android:layout_above="@+id/fwd_button"
android:scrollbars="none"
android:background="#808080" />
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Speak"
android:id="@+id/btnSpeak"
android:layout_alignParentBottom="true"
android:layout_centerHorizontal="true" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="-----"
android:id="@+id/txtSpeechInput"
android:layout_above="@+id/btnSpeak"
android:layout_centerHorizontal="true" />
<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Distance : "
android:id="@+id/textView"
android:layout_below="@+id/bwd_button"
android:layout_alignParentStart="true" />
<TextView
android:layout_width="50dp"
android:layout_height="wrap_content"
android:text="---"
android:id="@+id/tvdist"
android:layout_alignBottom="@+id/textView"
android:layout_toEndOf="@+id/textView" />
<Button
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Refresh"
android:id="@+id/button_dist"
android:layout_below="@+id/textView"
android:layout_alignParentStart="true" />
</RelativeLayout>
